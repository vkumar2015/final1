<h1>Edit User</h1>

<% the_user = User.read(params["id"]) %>

<div class="row">
  <div class="col-md-5">

    <%= form_tag "/users/#{the_user['id']}", "method" => "patch"  %>

      <div class="form-group">
        <%= label_tag "username", "UserName:" %>
        <%= text_field_tag "username", the_user["uname"], "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "password", "Password:" %>
        <%= text_field_tag "password", the_user["upassword"], "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "email", "Email:" %>
        <%= text_field_tag "email", the_user["uemail"], "class" => "form-control" %>
      </div>

     <div class="form-group">
        <%= label_tag "country", "Country:" %>
        <%= text_field_tag "country", the_user["ucountry"], "class" => "form-control" %>
      </div>


      <%= submit_tag "Save Changes", "class" => "btn btn-lg btn-success" %> or <%= link_to "Cancel", "/" %>

    </form>
</div>
</div>
