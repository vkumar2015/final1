<h1>Add a New User</h1>

<div class="row">
  <div class="col-md-5">

    <p><%= @message %></p>

    <%= form_tag "/users", "method" => "post"  %>

      <div class="form-group">
        <%= label_tag "username", "Choose a UserName:" %>
        <%= text_field_tag "username", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "password", "Password:" %>
        <%= password_field_tag "password", "", "class" => "form-control" %>

      </div>

      <div class="form-group">
        <%= label_tag "email", "Email:" %>
        <%= text_field_tag "email", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "country", "Country:" %>
        <%= text_field_tag "country", "", "class" => "form-control" %>
      </div>

      <%= submit_tag "Add this User", "class" => "btn btn-lg btn-success" %> or <%= link_to "Cancel", "/" %>

    </form>
</div>
</div>
