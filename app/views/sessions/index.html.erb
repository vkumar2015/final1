
  <div style="float:left; width:50%;">
    <% all_hospitals = Hospital.read %>
    <h2>Hospitals:</h2>
    <br><%= link_to "Click to add a New Hospital", "/hospitals/new" %>
    <br><br>
    <ul>
        <% all_hospitals.each do |hospital| %>
        <li>
          <%= image_tag hospital["hphotourl"], "width" => "120" %>
          <%= link_to hospital["hospname"], "/hospitals/#{hospital["id"]}" %>
          (<%= link_to "Delete", "/hospitals/#{hospital["id"]}", "method" => "delete" %>)
          (<%= link_to "Edit", "/hospitals/#{hospital["id"]}/edit" %>)
        </li>
      <% end %>
    </ul>
    <br><br>
  </div>

  <div style="float:right; width:50%;">
    <% all_doctors = Doctor.read %>
    <h2>Doctors:</h2>
    <br><%= link_to "Click to add a New Doctor", "/doctors/new" %>
    <br><br>
    <ul>
      <% all_doctors.each do |doctor| %>
        <li>
          <%= image_tag doctor["dphotourl"], "width" => "120" %>
          <%= link_to doctor["dname"], "/doctors/#{doctor["id"]}" %>
          (<%= link_to "Delete", "/doctors/#{doctor["id"]}", "method" => "delete" %>)
          (<%= link_to "Edit", "/doctors/#{doctor["id"]}/edit" %>)
        </li>
      <% end %>
    </ul>
    <br><br>
  </div>


